---
import { Picture } from "astro:assets";
import { Picture } from "astro:assets";
import regeneraliaBadge from "assets/regeneralia-web-carbon-score.png";
import greenBadge from "assets/regeneralia-green-hosting.png";
---

<footer class="py-14 bg-emerald-950 border-t border-white" style="margin-top: 8rem;">
   <div class="mx-auto w-full max-w-screen-xl px-5">
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 md:gap-10">
         <div>
            <h2 class="mb-4 text-xl font-semibold text-green-100 hover:green-600"><a href="/index">
                  Regeneralia</a></h2>
         </div>
         <div>
            <ul class="leading-10">
               <li> <a href="/index" class="text-sm font-light text-green-100 hover:green-400">
                  Conectando con el planeta
                  </a> 
               </li>
               <li> <a href="/servicios-descarbonizacion-digital" class="text-sm font-light text-green-100 hover:green-400">
                  Descarbonización digital
                  </a> 
               </li>
               <li> <a href="/hablemos-del-triple-impacto" class="text-sm font-light text-green-100 hover:green-400">
                  Hablemos
                  </a> 
               </li>
            </ul>
         </div>
         <div>
           <ul class="leading-10">
               <li> <a href="https://www.linkedin.com/company/regeneralia" class="text-sm font-light text-green-100 hover:green-400">
                  LinkedIn
                  </a> 
               </li>
               <li> <a href="https://wa.me/34698977236" class="text-sm font-light text-green-100 hover:green-400">
                  WhatsApp
                  </a> 
               </li>
            </ul> 
         </div>
         <div>
            <ul class="leading-10">
               <li> <a href="/politica-de-privacidad" class="text-sm font-light text-green-100 hover:green-400">
                  Politica de privacidad
                  </a> 
               </li>
               <li> <a href="/aviso-legal" class="text-sm font-light text-green-100 hover:green-400">
                  Aviso legal
                  </a> 
               </li>
                <li> <a href="/politica-de-cookies" class="text-sm font-light text-green-100 hover:green-400">
                  Politica de cookies
                  </a> 
               </li>
            </ul>
         </div>
      </div>
     <div class="mx-auto w-full max-w-screen-xl px-2 border-t border-white border-opacity-20 py-5">
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 md:gap-5">
         <div>
             <a href="/hablemos-del-triple-impacto" target="_blank" rel="noopener">  
<Picture
      src={regeneraliaBadge}
      alt="En esta acreditacíón Regeneralia certifica una huella de carbono digital A+"
      widths={[165, 185, 200]}
      sizes="(max-width: 200px) 10vw, 192px"
      loading="eager"
      format="avif"
    /> </a>
         </div>
         <div>
            <a href="https://www.thegreenwebfoundation.org/" target="_blank" rel="noopener">  
<Picture
      src={greenBadge}
      alt="Acreditación de que esta web está alojada en un hosting alimentado con energías renovables"
      widths={[165, 185, 200]}
      sizes="(max-width: 200px) 10vw, 192px"
      loading="eager"
      format="avif"
    /> </a>
         </div>
      </div>
     <div class="mt-16 flex flex-col gap-2 border-t border-white border-opacity-20 py-5 text-center md:flex-row md:justify-between md:text-start">
<p class="text-xs font-light text-green-100 hover:green-400">
            Copyright ©️ 2024 Regneralia. Todos los derechos reservados.
         </p>
         <p class="text-xs font-light text-green-100">
            Esta web se hizo con <a href="https://astro.build/" target="_blank" rel="noopener noreferrer" text-green-100 hover:green-500>
            Astro
            </a> 
         </p>
      </div>
   </div>
   </div>
</footer>
