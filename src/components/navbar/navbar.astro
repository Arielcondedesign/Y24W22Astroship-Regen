---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Sostenibilidad digital",
    path: "/index",
  },
  {
    title: "Servicios",
    path: "/servicios",
  },
  {
    title: "Conectate",
    badge: true,
    path: "/conectate",
  },
];
---
<Container class="astronav-sticky-header sticky top-0 border-b z-20 transition-all is-active py-2 bg-white/80 border-gray-200 backdrop-blur-lg">
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <span class="uppercase mt-0.5 leading-none text-[10px] ml-1 font-bold bg-teal-200 text-green-950 px-2 py-1 rounded-md">Bienvenid@ a</span>
        <a href="/" class="text-2xl"
          ><span class="font-bold text-green-950">Regeneralia</span>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900">
                      <span> {item.title}</span>
                      {item.badge && (
                        <span class="ml-1 px-2 py-0.5 text-[10px] animate-pulse font-semibold uppercase text-white bg-teal-600 rounded-full">
                          Ahora
                        </span>
                      )}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
    </div>
  </header>
</Container>
