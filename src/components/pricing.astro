---
import { Tick } from "@components/ui/icons";
import Link from "@components/ui/link.astro";

const { plan } = Astro.props;
---
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-4">
  {plan.map((plan) => (
    <div
      class="flex flex-col w-full border-2 border-[#D8DEE9] border-opacity-50 py-5 px-6 rounded-md"
    >
      <div class="text-center">
        <h4 class="text-lg font-medium text-gray-400">{plan.name}</h4>
        <p class="mt-4 text-2xl font-bold text-teal-950 md:text-2xl">
          {plan.price && typeof plan.price === "object" ? plan.price.monthly : plan.price}
        </p>
      </div>
      <ul class="grid mt-8 text-left gap-y-4">
        {plan.features.map((item) => (
          <li class="flex items-start gap-3 text-gray-800">
            <Tick class="w-6 h-6" />
            <span>{item}</span>
          </li>
        ))}
      </ul>
      <div class="flex mt-8">
        <Link href={plan.button.link || "#"} block style={plan.popular ? "primary" : "outline"}>
          {plan.button.text || "Get Started"}
        </Link>
      </div>
    </div>
  )}
</div>
